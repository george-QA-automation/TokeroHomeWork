<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TokeroHomeWork.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TokeroHomeWork.Views"
    Shell.NavBarIsVisible="True">

    <TabBar>
        <Tab Icon="home">
            <ShellContent
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="HomePage" />
        </Tab>
        <Tab Icon="portfolio">
            <ShellContent
                ContentTemplate="{DataTemplate views:PortfolioPage}"
                Route="Portfolio" />
        </Tab>
    </TabBar>

</Shell>
