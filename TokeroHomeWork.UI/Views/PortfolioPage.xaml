<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TokeroHomeWork.Application.Models;assembly=TokeroHomeWork.Application"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:converters="clr-namespace:TokeroHomeWork.Converters"
             xmlns:viewModels="clr-namespace:TokeroHomeWork.Application.ViewModels;assembly=TokeroHomeWork.Application"
             x:Class="TokeroHomeWork.Views.PortfolioPage"
             Shell.NavBarIsVisible="False"
             x:DataType="{x:Type viewModels:PortfolioViewModel}">
<ScrollView>
       <Grid RowDefinitions="Auto,Auto,*,Auto,1.2*,Auto,Auto,*" 
             Padding="10">
              <Label Grid.Row="0" 
                     Text="Portfolio" 
                     FontSize="24" 
                     FontAttributes="Bold" 
                     HorizontalOptions="Center"
                     Margin="0,20,0,20" />
              <Label Grid.Row="1"
                     Text="Investment over time"
                     FontSize="20"
                     HorizontalOptions="Start"
                     Margin="0,0,0,10"
                     IsVisible="{Binding HasInvestmentRecords}"/>
              <Image Grid.Row="1"
                     Source="clear"
                      Margin="0,0,0,10"
                      WidthRequest="20"
                      HeightRequest="20"
                      HorizontalOptions="End"
                      IsVisible="{Binding HasInvestmentRecords}">
                     <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ClearPortfolioCommand}"/>
                     </Image.GestureRecognizers>
              </Image>
              <Frame Grid.Row="2" 
                     Margin="0,0,0,20"
                     CornerRadius="10"
                     BorderColor="LightGray"
                     IsVisible="{Binding HasInvestmentRecords}">
                     <Grid RowDefinitions="Auto,Auto,*,Auto,Auto"
                           ColumnDefinitions="*,0.8*">
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="{Binding PortfolioChartInvestment}" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   HorizontalOptions="Start"/>
                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Text="{Binding PortfolioChartValue}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Start"/>
                            <Label Grid.Row="0"
                                   Grid.Column="1"
                                   Text="{Binding PortfolioChartROI}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   Text="Compare with"
                                   TextColor="BlueViolet"
                                   FontSize="10"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End">
                                   <Label.GestureRecognizers>
                                          <TapGestureRecognizer Command="{Binding CompareWithCommand}"/>
                                   </Label.GestureRecognizers>
                            </Label>
                            <microcharts:ChartView Grid.Row="2"
                                                   Grid.ColumnSpan="2"
                                                   Chart="{Binding PerformanceChart}"
                                                   HeightRequest="250"/>
                            <microcharts:ChartView Grid.Row="2"
                                                   Grid.ColumnSpan="2"
                                                   IsVisible="{Binding IsCompare}"
                                                   Chart="{Binding PerformanceCompareChart}"
                                                   HeightRequest="250"
                                                   Opacity="0.5"/>
                            <HorizontalStackLayout Grid.Column="0"
                                                   Grid.Row="3"
                                                   HorizontalOptions="Start">
                                   <BoxView WidthRequest="10" 
                                            HeightRequest="10" 
                                            Color="#3498db" 
                                            Margin="0,0,5,0"/>
                                   <Label Text="Bitcoin" 
                                          FontSize="10"/>
                            </HorizontalStackLayout>
                            <CollectionView Grid.Column="0"
                                   Grid.Row="4"
                                   HorizontalOptions="Start"
                                   ItemsSource="{Binding SelectedCoins}"
                                   ItemsLayout="HorizontalList">
                                   <CollectionView.ItemTemplate>
                                          <DataTemplate>
                                                 <HorizontalStackLayout>
                                                        <BoxView WidthRequest="10" 
                                                                 HeightRequest="10" 
                                                                 Color="{Binding ., Converter={converters:CryptoColorConverter}}" 
                                                                 Margin="0,0,5,0"/>
                                                        <Label Text="{Binding .}" 
                                                               FontSize="10"/>
                                                 </HorizontalStackLayout>
                                          </DataTemplate>
                                   </CollectionView.ItemTemplate>
                            </CollectionView>
                     </Grid>
              </Frame>
              <Label Grid.Row="3"
                     Text="Crypto holdings"
                     FontSize="20"
                     HorizontalOptions="Start"
                     Margin="0,0,0,10"
                     IsVisible="{Binding HasInvestmentRecords}"/>
              <ListView Grid.Row="4" 
                        ItemsSource="{Binding CryptoSummaries}"
                        SelectionMode="None"
                        IsVisible="{Binding HasInvestmentRecords}"
                        Margin="0,0,0,20">
                     <ListView.Header>
                            <Grid ColumnDefinitions="*,*,1.2*,1.2*">
                                   <Label Grid.Column="0" 
                                          Text="Name" 
                                          FontAttributes="Bold" 
                                          HorizontalOptions="Center"/>
                                   <Label Grid.Column="1" 
                                          Text="Amount" 
                                          FontAttributes="Bold" 
                                          HorizontalOptions="Center"/>
                                   <Label Grid.Column="2" 
                                          Text="Amount in BTC"
                                          FontAttributes="Bold" 
                                          HorizontalOptions="Center"/>
                                   <Label Grid.Column="3" 
                                          Text="Value Today â‚¬" 
                                          FontAttributes="Bold" 
                                          HorizontalOptions="Center"/>
                            </Grid>
                     </ListView.Header>
                     <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:CryptoSummary">
                                   <ViewCell>
                                          <Grid ColumnDefinitions="*,*,1.2*,1.2*" 
                                                Padding="10">
                                                 <Label Grid.Column="0"
                                                        Text="{Binding CryptoName}" 
                                                        HorizontalOptions="Start"/>
                                                 <Label Grid.Column="1"
                                                        Text="{Binding Amount, StringFormat='{0:N6}'}" 
                                                        HorizontalOptions="Center"/>
                                                 <Label Grid.Column="2" 
                                                        LineBreakMode="TailTruncation"
                                                        Text="{Binding AmountInBTC, StringFormat='{0:N6}'}"
                                                        HorizontalOptions="Center"/>
                                                 <Label Grid.Column="3"
                                                        LineBreakMode="TailTruncation"
                                                        Text="{Binding TotalValue, StringFormat='{0:N2}'}"
                                                        HorizontalOptions="Center"/>
                                          </Grid>
                                   </ViewCell>
                            </DataTemplate>
                     </ListView.ItemTemplate>
              </ListView>
              <Frame Grid.Row="5" 
                     Margin="0,0,0,20"
                     Padding="10"
                     CornerRadius="10"
                     BorderColor="LightGray"
                     IsVisible="{Binding HasInvestmentRecords}">
                     <microcharts:ChartView Chart="{Binding DonutChart}"
                                            HeightRequest="250"/>
              </Frame>
              <Label Grid.Row="6"
                     Text="Monthly recap"
                     FontSize="20"
                     HorizontalOptions="Start"
                     Margin="0,0,0,10"
                     IsVisible="{Binding HasInvestmentRecords}"/>
              <ListView Grid.Row="7" 
                        ItemsSource="{Binding ProcessedInvestmentRecords}"
                        SelectionMode="None"
                        Margin="0,0,0,20"
                        IsVisible="{Binding HasInvestmentRecords}">
                     <ListView.Header>
                            <Grid ColumnDefinitions="0.8*,*,*,1.2*,0.7*" 
                                  Padding="5">
                                   <Label Grid.Column="0" 
                                          Text="Date" 
                                          FontAttributes="Bold" 
                                          VerticalOptions="Center"/>
                                   <Label Grid.Column="1" 
                                          Text="Invested â‚¬" 
                                          FontAttributes="Bold" 
                                          VerticalOptions="Center"/>
                                   <Label Grid.Column="2" 
                                          Text="Crypto Amount" 
                                          FontAttributes="Bold" 
                                          VerticalOptions="Center"/>
                                   <Label Grid.Column="3" 
                                          Text="Value Today â‚¬" 
                                          FontAttributes="Bold" 
                                          VerticalOptions="Center"/>
                                   <Label Grid.Column="4" 
                                          Text="ROI %" 
                                          FontAttributes="Bold" 
                                          VerticalOptions="Center"/>
                            </Grid>
                     </ListView.Header>
                     <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:InvestmentRecord">
                                   <ViewCell Height="70">
                                          <Grid RowDefinitions="auto,auto"
                                                ColumnDefinitions="0.8*,*,*,1.2*,0.7*" 
                                                Padding="10">
                                                 <Label Grid.Column="0"
                                                        Grid.RowSpan="2"
                                                        Text="{Binding Date, StringFormat='{0:dd MMM}'}" 
                                                        HorizontalOptions="Start"
                                                        VerticalOptions="Center"/>
                                                 <Label Grid.Column="1"
                                                        Grid.RowSpan="2"
                                                        Text="{Binding InvestedAmount, StringFormat='{0:N2}'}" 
                                                        HorizontalOptions="Center"
                                                        VerticalOptions="Center"/>
                                                 <Label Grid.Column="2" 
                                                        Grid.Row="0"
                                                        LineBreakMode="TailTruncation"
                                                        Text="{Binding CryptoName}"/>
                                                 <Label Grid.Column="2" 
                                                        Grid.Row="1"
                                                        LineBreakMode="TailTruncation"
                                                        Text="{Binding CryptoAmount, StringFormat='{0:N6}'}" />
                                                 <Label Grid.Column="3"
                                                        Grid.RowSpan="2"
                                                        Text="{Binding ValueToday, StringFormat='{0:N2}'}" 
                                                        HorizontalOptions="Center"
                                                        VerticalOptions="Center"/>
                                                 <Label Grid.Column="4"
                                                        Grid.RowSpan="2"
                                                        Text="{Binding ROI, StringFormat='{0:F2}'}" 
                                                        VerticalOptions="Center"/>
                                          </Grid>
                                   </ViewCell>
                            </DataTemplate>
                     </ListView.ItemTemplate>
              </ListView>
              
              <!-- Empty View & Loading -->
              <Label Grid.Row="5"
                     Text="No investments yet"
                     FontSize="16"
                     FontAttributes="Bold"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     IsVisible="{Binding HasInvestmentRecords, Converter={converters:NotConverter}}"
                     Margin="20">
                     <Label.Triggers>
                            <DataTrigger TargetType="Label"
                                         Binding="{Binding IsLoading, Mode=OneWay}"
                                         Value="True">
                                   <DataTrigger.Setters>
                                          <Setter Property="Text"
                                                  Value="Loading..." />
                                   </DataTrigger.Setters>
                            </DataTrigger>
                     </Label.Triggers>
              </Label>
              <ActivityIndicator Grid.Row="6"
                                 IsVisible="{Binding IsLoading}"
                                 IsRunning="{Binding IsLoading}"
                                 Color="Black"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>
       </Grid> 
</ScrollView>
</ContentPage>
