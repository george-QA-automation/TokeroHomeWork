<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TokeroHomeWork.Application.ViewModels;assembly=TokeroHomeWork.Application"
             x:Class="TokeroHomeWork.Views.PortfolioPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewModels:PortfolioViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*" Padding="20">
        <Label Grid.Row="0" 
               Text="Portfolio" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"
               Margin="0,20,0,20" />
        <ListView Grid.Row="1" 
                  ItemsSource="{Binding InvestmentRecords}">
            <ListView.Header>
                <Grid ColumnDefinitions="*,*,*,*,*" 
                      Padding="10">
                    <Label Grid.Column="0" 
                           Text="Date" FontAttributes="Bold" />
                    <Label Grid.Column="1" 
                           Text="Invested $" FontAttributes="Bold" />
                    <Label Grid.Column="2" 
                           Text="Crypto Amount" FontAttributes="Bold" />
                    <Label Grid.Column="3" 
                           Text="Value Today $" FontAttributes="Bold" />
                    <Label Grid.Column="4" 
                           Text="ROI %" FontAttributes="Bold" />
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid RowDefinitions="*,*"
                              ColumnDefinitions="*,*,*,*,*" 
                              Padding="10">
                            <Label Grid.Column="0"
                                   Grid.RowSpan="2"
                                   Text="{Binding Date, StringFormat='{0:MMMM dd}'}" />
                            <Label Grid.Column="1"
                                   Grid.RowSpan="2"
                                   Text="{Binding InvestedAmount, StringFormat='{0:N2}'}" />
                            <Label Grid.Column="2" 
                                   Grid.Row="0" 
                                   Text="{Binding CryptoName}"/>
                            <Label Grid.Column="2" 
                                   Grid.Row="1"
                                   Text="{Binding CryptoAmount, StringFormat='{0:N6}'}" />
                            <Label Grid.Column="3"
                                   Grid.RowSpan="2"
                                   Text="{Binding ValueToday, StringFormat='{0:N2}'}" />
                            <Label Grid.Column="4"
                                   Grid.RowSpan="2"
                                   Text="{Binding ROI, StringFormat='{0:F1}'}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>
